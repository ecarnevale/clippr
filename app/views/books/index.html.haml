%h1 Books

.import-box
  = button_to "Import from Kindle", imports_path
  or
  %a{:href => "#", :class => "file-import-dropdown"} import from file
  = cleardiv
  .import-file-fields
    - form_tag imports_path, :multipart => true do
      = file_field :import, :import_file
      = submit_tag "Upload file"
  = cleardiv

%ul.books
  - for book in @books
    - if book.clippings.any? || book.notes.any?
      %li{:class => cycle("odd", "even")}
        %h3
          %span.title= link_to book.title, book
          %span.author= book.author.name
        .clippings-count
          %span= book.clippings.size
          = book.clippings.size == 1 ? "clipping" : "clippings"
        .notes-count
          %span=book.notes.size
          = book.notes.size == 1 ? "note" : "notes"
        = cleardiv