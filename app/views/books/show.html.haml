%h1.subhead
  = @book.title
  (#{link_to @book.author.name, @book.author})

%ul.clippings
  - @book.clippings.each do |clipping|
    %li
      Locations:
      = clipping.location_string
      .datetime= clipping.clipped_at
      %blockquote= clipping.content
      - if clipping.note
        .note
          %i= clipping.note.content